  if flag(UseKatip)
      build-depends: katip >=0.8 && < 1.0
      cpp-options: -DUSE_KATIP
  else
      build-depends: monad-logger >=0.3 && <0.4
      cpp-options: -DUSE_MONAD_LOGGER

test-suite tests
  type: exitcode-stdio-1.0
  main-is: Test.hs
  hs-source-dirs:
      tests
  ghc-options: -Wall -fno-warn-orphans
  build-depends:
      haskell-helm-operator-client
    , QuickCheck
    , aeson
    , base >=4.7 && <5.0
